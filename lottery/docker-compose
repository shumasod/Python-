version: '3.8'

services:
  # Nginx ロードバランサー
  nginx:
    image: nginx:alpine
    container_name: lottery-nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - lottery-api-1
      - lottery-api-2
      - lottery-api-3
      - lottery-api-4
    networks:
      - lottery-network
    restart: unless-stopped

  # Redis キャッシュ & ジョブキュー
  redis:
    image: redis:7-alpine
    container_name: lottery-redis
    ports:
      - "6379:6379"
    command: redis-server --appendonly yes --maxmemory 512mb --maxmemory-policy allkeys-lru
    volumes:
      - redis-data:/data
    networks:
      - lottery-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 3

  # Go API サーバー インスタンス 1
  lottery-api-1:
    build: .
    container_name: lottery-api-1
    environment:
      - PORT=8080
      - WORKER_COUNT=25
      - REDIS_ADDR=redis:6379
    depends_on:
      redis:
        condition: service_healthy
    networks:
      - lottery-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 512M

  # Go API サーバー インスタンス 2
  lottery-api-2:
    build: .
    container_name: lottery-api-2
    environment:
      - PORT=8080
      - WORKER_COUNT=25
      - REDIS_ADDR=redis:6379
    depends_on:
      redis:
        condition: service_healthy
    networks:
      - lottery-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 512M

  # Go API サーバー インスタンス 3
  lottery-api-3:
    build: .
    container_name: lottery-api-3
    environment:
      - PORT=8080
      - WORKER_COUNT=25
      - REDIS_ADDR=redis:6379
    depends_on:
      redis:
        condition: service_healthy
    networks:
      - lottery-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 512M

  # Go API サーバー インスタンス 4
  lottery-api-4:
    build: .
    container_name: lottery-api-4
    environment:
      - PORT=8080
      - WORKER_COUNT=25
      - REDIS_ADDR=redis:6379
    depends_on:
      redis:
        condition: service_healthy
    networks:
      - lottery-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 512M

networks:
  lottery-network:
    driver: bridge

volumes:
  redis-data:
    driver: local
